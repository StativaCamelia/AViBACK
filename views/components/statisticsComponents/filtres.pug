.filtres
    form#filters_form.form_filters(action='/action_page.php' method='get')
        .up_filtres
            .left_filtres
                label.label_spatial Spatial Coordinates
                .select_box
                    select#country.options(form='filters_form' name='country')
                        option(selected='' hidden='') State
                        - let keyStates = {states}
                        - let valuesStates = JSON.parse(keyStates.states)
                        each n in valuesStates
                            option(id=n.abbr value=n.value)
                                | #{n.value}
                .select_box
                    select#county.options_county(form='filters_form' name='county')
                        option(value='County' selected='' hidden='') County
                        - let keyCounties = {counties}
                        - let valuesCounties = JSON.parse(keyCounties.counties)
                        each n in valuesCounties
                            option(value=n)
                                | #{n}
                .select_box
                    select#City.options_city(form='filters_form' name='City')
                        option(value='0' selected='' hidden='') City
                        - let keyCities = {cities}
                        - let valuesCities = JSON.parse(keyCities.cities)
                        each n in valuesCities
                            option(value=n)
                                | #{n}
                .select_box
                    select#Street.options_street(form='filters_form' name='Street')
                        option(value='0' selected='' hidden='') Street
                        - let keyStreets = {streets}
                        - let valuesStreets = JSON.parse(keyStreets.streets)
                        each n in valuesStreets
                            option(value=n)
                                | #{n}
                .select_box
                    select#number.options_number(form='filters_form' name='number')
                        option(value='0' selected='' hidden='') Number
                        - let keyNumbers = {numbers}
                        - let valuesNumbers = JSON.parse(keyNumbers.numbers)
                        each n in valuesNumbers
                            option(value=n)
                                | #{n}
                .select_box
                    select#Timezone.options_timezone(form='filters_form' name='Timezone')
                        option(value='0' selected='' hidden='') Timezone
                        - let keyTimezones = {timezones}
                        - let valuesTimezones = JSON.parse(keyTimezones.timezones)
                        each n in valuesTimezones
                            option(value=n)
                                | #{n}
                .select_box
                    select#Road_side.options_season(form='filters_form' name='Road_Side')
                        option(value='0' selected='' hidden='') Road Side
                        - let keyRoadSides = {roadSides}
                        - let valuesRoadSides = JSON.parse(keyRoadSides.roadSides)
                        each n in valuesRoadSides
                            option(value=n)
                                | #{n}
            .right_filters
                label.label_weather(for='accident_date') Weather Conditions
                .select_box
                    select#Weather_Condition.options_weather(form='filters_form' name='Weather_Condition')
                        option(value='0' selected='' hidden='') Weather
                        - let keyWeather = {weather}
                        - let valuesWeather = JSON.parse(keyWeather.weather)
                        each n in valuesWeather
                            option(value=n)
                                | #{n}
                .select_box
                    select#Wind_Direction.options_weather(form='filters_form' name='Wind_Direction')
                        option(value='0' selected='' hidden='') Wind direction
                        - let keyWindDirections = {windDirections}
                        - let valuesWindDirections = JSON.parse(keyWindDirections.windDirections)
                        each n in valuesWindDirections
                            option(value=n)
                                | #{n}
                .weather_filtre
                    label.weather_select_label(for='temperature') Temperature(&deg;C):
                    input#temperature.weather_select(type='number' name='temperature' form='filters_form' value='0' min='-30' max='40')
                .weather_filtre
                    label.weather_select_label(for='wind_chill')
                        | Wind Chill(F):
                    input#wind_chill.weather_select(type='number' name='wind_chill' form='filters_form' value='0' min='0' max='100')
                .weather_filtre
                    label.weather_select_label(for='wind_chill')
                        | Wind speed(mph):
                    input#wind_speed.weather_select(type='number' name='wind_speed' form='filters_form' value='0' min='0' max='100')
                .weather_filtre
                    label.weather_select_label(for='humidity')
                        | Humidity(%):
                    input#humidity.weather_select(type='number' name='humidity' form='filters_form' value='0' min='0' max='100')
                .weather_filtre
                    label.weather_select_label(for='pressure')
                        | Pressure(in):
                    input#pressure.weather_select(type='number' name='pressure' form='filters_form' value='0' min='0' max='100')
                .weather_filtre
                    label.weather_select_label(for='wind_chill')
                        | Vissibility(in):
                    input#vissibility.weather_select(type='number' form='filters_form' name='vissibility' value='0' min='0' max='100')
            // MIDDLE FILTRES
        .middle_filtres
            .road_select_col
                .road_option
                    input#amenity.road_event(type='checkbox' name='amenity' form='filters_form' value='amenity')
                    label.road_event_label(for='amenity') Amenity
                .road_option
                    input#bump.road_event(type='checkbox' name='bump' value='bump' form='filters_form')
                    label.road_event_label(for='bump') Bump
                .road_option
                    input#crossing.road_event(type='checkbox' name='crossing' value='crossing' form='filters_form')
                    label.road_event_label(for='crossing') Crossing
            .road_select_col
                .road_option
                    input#give_away.road_event(type='checkbox' name='give_away' value='give_away' form='filters_form')
                    label.road_event_label(for='give_away') Give away
                .road_option
                    input#junction.road_event(type='checkbox' name='junction' value='junction' form='filters_form')
                    label.road_event_label(for='junction') Junction
                .road_option
                    input#no_exit.road_event(type='checkbox' name='no_exit' value='no_exit' form='filters_form')
                    label.road_event_label(for='no_exit') No exit
            .road_select_col
                .road_option
                    input#Railway.road_event(type='checkbox' name='Railway' value='Railway' form='filters_form')
                    label.road_event_label(for='Railway') Railway
                .road_option
                    input#Roundabout.road_event(type='checkbox' name='Roundabout' value='Roundabout' form='filters_form')
                    label.road_event_label(for='Roundabout') Roundabout
                .road_option
                    input#Traffic_Calming.road_event(type='checkbox' name='Traffic_Calming' value='Traffic_Calming' form='filters_form')
                    label.road_event_label(for='Traffic_Calming') Traffic Calming
            .road_select_col
                .road_option
                    input#Stop.road_event(type='checkbox' name='Stop' value='Stop' form='filters_form')
                    label.road_event_label(for='Stop') Stop
                .road_option
                    input#Station.road_event(type='checkbox' name='Station' value='Station' form='filters_form')
                    label.road_event_label(for='Station') Station
                .road_option
                    input#Traffic_Signal.road_event(type='checkbox' name='Traffic_Signal' value='Traffic_Signal' form='filters_form')
                    label.road_event_label(for='Traffic_Signal') Traffic Signal
        // -DOWN FILTRES
        .down_filtres
            .calendar
                label.label_calendar(for='accident_date') Accident Date
                input#accident_date(type='date' name='accident_date' form='filters_form')
            .slider_container_1
                label.slider_label(for='severity') Accident severity
                input#severity.slider(form='filters_form' type='range' name='severity' min='1' max='3' value='2' step='1')
                ul.slider_options_1
                    li.minor Minor
                    li.major Major
                    li.fatal Fatal
            .slider_container_2
                label.slider_label Day/Night:
                .range_icons
                img.icons(alt='sun' src='./Images/Icons/sun.png')
                input#hourIN.slider(form='filters_form' name='Hour' type='range' min='0' max='24' step='1' value='0')
                output#hourOUT(name='hourOUT')
                img.icons(alt='moon' src='./Images/Icons/moon.png')
                ul.slider_options_2
                    li.minor Day
                    li.major Night
            // LAST SET OF FILTERS
            .last_set_filters
                .last_set_filters_col
                    .moon_filters
                        label.label_moon Sunrise/Sunset
                        .moon_option
                            input#sunrise_sunset_day(form='filters_form' type='radio' name='sunrise_sunset' value='day')
                            label.moon_option_label(for='sunrise_sunset_day') Day
                        .moon_option
                            input#sunrise_sunset_night(form='filters_form' type='radio' name='sunrise_sunset' value='night')
                            label.moon_option_label(for='sunrise_sunset_night') Night
                .last_set_filters_col
                    .moon_filters
                        label.label_moon Civil Twilight
                        .moon_option
                            input#civil_twilight_day(type='radio' form='filters_form' name='civil_twilight' value='day')
                            label.moon_option_label(for='civil_twilight_day') Day
                        .moon_option
                            input#civil_twilight_night(type='radio' form='filters_form' name='civil_twilight' value='night')
                            label.moon_option_label(for='civil_twilight_night') Night
                .last_set_filters_col
                    .moon_filters
                        label.label_moon Nautical Twilight
                        .moon_option
                            input#nautical_twilight_day(type='radio' form='filters_form' name='nautical_twilight' value='day')
                            label.moon_option_label(for='nautical_twilight_day') Day
                        .moon_option
                            input#nautical_twilight_night(type='radio' form='filters_form' name='nautical_twilight' value='night')
                            label.moon_option_label(for='nautical_twilight_night') Night
                .last_set_filters_col
                    .moon_filters
                        label.label_moon(for='astronomical_twilight_day') Astronomical Twilight
                        .moon_option
                            input#astronomical_twilight_day(type='radio' form='filters_form' name='astronomical_twilight' value='day')
                            label.moon_option_label(for='astronomical_twilight_day') Day
                        .moon_option
                            input#astronomical_twilight_night(type='radio' form='filters_form' name='astronomical_twilight' value='night')
                            label.moon_option_label(for='astronomical_twilight_night') Night
        .submit_button
            input#submit_button(form='filters_form' type='submit' value='Submit')