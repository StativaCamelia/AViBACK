extends ./layouts/layoutDashboard.pug
block controller_first_div
    .button_box
        a.control_button#active_dash(href='http://localhost:5002/dashboard') GENERAL
        a.control_button(href='http://localhost:5002/dashboard/users') USERS
        a.control_button(href='http://localhost:5002/dashboard/accidents') ACCIDENTS
block controller_second_div
    .first_box_dash
        h2 About users
        h3#users_number Total No.:
        h3 In last 10 days:
        ul
            li#new_users
            li#deleted_users
            li#updated_users
    .second_box_dash
        h2 About accidents
        h3#accidents_number Total No.:
        h3 In last 10 days:
        ul
            li#new_accidents
            li#deleted_accidents
            li#updated_accidents